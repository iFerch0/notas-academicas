datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id Int @id @default(autoincrement())
    documentType String?
    documentNumber String? @unique
    firstName String
    lastName String
    birthDate DateTime?
    address String?
    city String?
    state String?
    country String?
    phoneNumber?
    gender String?
    role String
    email String @unique
    password String
    status String
    createdAt DateTime @default(now())
    updatedAt       DateTime  @updatedAt
    deletedAt DateTime?
}